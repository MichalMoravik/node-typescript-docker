{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"allowJs": false,
		"sourceMap": true,
		"baseUrl": ".",
		"strict": true
	},
	"include": ["src"]
}
